@model Shop.Models.Product

@{ ViewData["Title"] = "Details";
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");}
<div class="col-main">
    <div class="product-view">
        <div class="product-essential">
            <form action="#" method="post" id="product_addtocart_form">
                <input name="form_key" value="6UbXroakyQlbfQzK" type="hidden">
                <div class="product-img-box col-lg-4 col-sm-5 col-xs-12">
                    @{ string[] arrListStr = Model.ProductImage.Split(" "); }
                    <div class="product-image">
                        <div class="product-full big-img"> <img src="~/images/@arrListStr[0]" alt="product-image" /> </div>
                        <div class="more-views">
                            <div class="slider-items-products">
                                <div id="gallery_01" class="product-flexslider hidden-buttons product-img-thumb">
                                    <div class="slider-items slider-width-col4 block-content">
                                        <div class="more-views-items">
                                            @for (int i = 0; i < arrListStr.Length - 1; i++)
                                            {<a class="small-img">
                                                <img style="width: 20%" src="~/images/@arrListStr[i]" alt="product-image" onclick="showImg(this.src)" />
                                            </a>}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end: more-images -->
                </div>
                <div class="product-shop col-lg-8 col-sm-7 col-xs-12">
                    <div class="product-name">
                        <h1>@Model.ProductName</h1>
                    </div>
                    <div class="price-block">
                        <div class="price-box">
                            <p class=""> <span class="price-label"></span> 
                            <span class="price">Price: @String.Format(format, "{0:c0}", @Model.OutPrice) </span> 
                            </p>
                            @if (Model.ProductQuantity != 0) {
                            <p class="availability in-stock pull-right"><span>Available</span></p>
                            }
                            else { 
                            <p class="unavailability in-stock pull-right" ><i class="fas fa-ban"></i><span>Unavailable</span></p>
                            }
                        </div>
                    </div>
                    <div class="short-description">
                        <div class="short-description">
                            <div class="product-type">
                                @if (Model.ProductType == 1002)
                                {
                                    <h2><b>Type:</b> Guppy</h2> }
                                else if (Model.ProductType == 1003)
                                {
                                    <h2><b>Type:</b> Neon</h2> }
                                else if (Model.ProductType == 1004)
                                {
                                    <h2><b>Type:</b> Betta</h2> }
                                else if (Model.ProductType == 1005)
                                {
                                    <h2><b>Type:</b> Callichthyidae</h2> }
                                else if (Model.ProductType == 1006)
                                {
                                    <h2><b>Type:</b> Ranchu</h2> }
                                else if (Model.ProductType == 1007)
                                {
                                    <h2><b>Type:</b> Ranchu</h2> }
                                else if (Model.ProductType == 1008)
                                {
                                    <h2><b>Type:</b> Puntius Tetrazona</h2>
                                }
                                else if (Model.ProductType == 1009)
                                {
                                    <h2><b>Type:</b> Danio rerio</h2>
                                }
                                else if (Model.ProductType == 1010)
                                {
                                    <h2><b>Type:</b> Cyprinidae</h2>
                                }
                                else if (Model.ProductType == 1011)
                                {
                                    <h2><b>Type:</b> Mikrogeophagus ramirezi</h2>
                                }


                            </div>
                            <div class="product-color">
                                @if (Model.ProductColor == 1)
                                {
                                    <h2><b>Color:</b> Red</h2> }
                                else if (Model.ProductColor == 2)
                                {
                                    <h2><b>Color:</b> Blue</h2> }
                                else if (Model.ProductColor == 3)
                                {
                                    <h2><b>Color:</b> Green</h2> }
                                else if (Model.ProductColor == 1002)
                                {
                                    <h2><b>Color:</b> Orange</h2> }
                                else if (Model.ProductColor == 1003)
                                {
                                    <h2><b>Color:</b> Purple</h2> }
                                else if (Model.ProductColor == 1004)
                                {
                                    <h2><b>Color:</b> Pink</h2> }
                                else if (Model.ProductColor == 1005)
                                {
                                    <h2><b>Color:</b> Black</h2>
                                }
                                else if (Model.ProductColor == 1006)
                                {
                                    <h2><b>Color:</b> Yellow</h2>
                                }
                                else if (Model.ProductColor == 1007)
                                {
                                    <h2><b>Color:</b> White</h2>
                                }
                            </div>
                            <div class="product-brand">
                                @if (Model.ProductBrand == 1003)
                                {
                                    <h2><b>Water Environment:</b> freshwater fish</h2> }
                                else if (Model.ProductBrand == 1004)
                                {
                                    <h2><b>Water Environment:</b> brackishwater fish</h2> }
                                else if (Model.ProductBrand == 1005)
                                {
                                    <h2><b>Water Environment:</b> seawater fish</h2>}

                            </div>
                            <div class="product-size">
                                @if (Model.ProductSize == 1)
                                {
                                    <h2><b>Size:</b> Small</h2> }
                                else if (Model.ProductSize == 2)
                                {
                                    <h2><b>Size:</b> Medium</h2> }
                                else if (Model.ProductSize == 1002)
                                {
                                    <h2><b>Size:</b> Big</h2>}

                            </div>
                            <h2><strong>Product Description </strong></h2>
                            <p>@Model.ProductDescription</p>
                        </div>
                        
                    </div>
                    <div class="add-to-box">
                        <div class="add-to-cart">
                            <div class="pull-left">
                                <div class="custom pull-left">
                                    <button onClick="var result = document.getElementById('qty'); var qty = result.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 0 ) result.value--;return false;" class="reduced items-count" type="button"><i class="fa fa-minus">&nbsp;</i></button>
                                    <input type="text" class="input-text qty" title="Qty" value="1" maxlength="12" id="qty" name="qty">
                                    <button onClick="var result = document.getElementById('qty'); var qty = result.value; if( !isNaN( qty )) result.value++;return false;" class="increase items-count" type="button"><i class="fa fa-plus">&nbsp;</i></button>
                                </div>
                            </div>
                            <a asp-controller="AddOrder" asp-action="AddtoCart" asp-route-id="@Model.Id" class="button btn-cart" title="Add to Cart" type="button">Add to Cart</span></a>
                        </div>
                        <div class="email-addto-box">
                            <ul class="add-to-links">
                                <li> <a class="link-wishlist" asp-controller="AddOrder" asp-action="AddtoWishlist" asp-route-id="@Model.Id"><span>Add to Wishlist</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    let bigImg = document.querySelector('.big-img img');
    function showImg(pic) {
        bigImg.src = pic;
    }
</script>